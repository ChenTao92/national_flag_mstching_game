body
  background-image: url('./image/bg.jpg')
  background-size: cover

#gameArea
  width: 600px
  height: 600px
  margin: auto
  border: solid 2px black
  display: flex
  flex-wrap: wrap
  > div
    box-sizing: border-box
    border: solid 1px black
    position: relative
    img
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
    .backImage
      opacity: 0.7
      background: gray
      z-index: 100
    
